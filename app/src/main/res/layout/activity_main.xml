<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.shlomisasportas.MainActivity">

    <ImageView
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:src="@drawable/search" />

    <ImageView
        android:id="@+id/upcomingevents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/search"
        android:layout_alignStart="@+id/search"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/search"
        android:src="@drawable/upcomingevent" />

    <ImageView
        android:id="@+id/addProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/upcomingevents"
        android:layout_alignStart="@+id/upcomingevents"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/upcomingevents"
        app:srcCompat="@drawable/addprofile" />

</RelativeLayout>
